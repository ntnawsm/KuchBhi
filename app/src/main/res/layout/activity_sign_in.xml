<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sachinnagar.kuchbhi.SignIn"
    android:background="#71e2ef">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/croupier"
        android:layout_marginBottom="90dp"
        android:layout_above="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/editText"
        android:hint="Nick Name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginBottom="19dp"
        android:background="@drawable/roundedbutton"
        android:layout_above="@+id/letsroll"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/letsroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Roll"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/ovalbutton"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        app:srcCompat="@drawable/male"
        android:background="#71e2ef"
        android:layout_above="@+id/editText"
        android:layout_alignLeft="@+id/letsroll"
        android:layout_alignStart="@+id/letsroll" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/female"
        android:background="#71e2ef"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignRight="@+id/letsroll"
        android:layout_alignEnd="@+id/letsroll"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENDER:"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
